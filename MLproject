name: BTRSeg

docker_env:
    image: dscarmo/btrseg

entry_points:
    pre_process:
        parameters:
            data_path: path
        command: "python3 src/brats_preprocess.py --data_path {data_path}"
    visualize:
        parameters:
            input: path
        command: "python3 src/visualize_npz.py --input {input} --no_display"
    docker_test:
        command: "python3 src/docker_test.py"